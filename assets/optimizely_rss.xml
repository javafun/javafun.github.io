---
layout: compress
permalink: /optimizely_rss.xml
# Atom Feed, reference: https://validator.w3.org/feed/docs/atom.html
---
<?xml version="1.0" encoding="utf-8"?>
{% capture source %}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}</link>
    <copyright> Â© {{ 'now' | date: '%Y' }} {{ site.social.name }} </copyright>
    <lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
    {% for post in site.posts limit: 10 %}
		{% unless post.draft %}
			{% for tag in post.tags %}	
				{% if tag == 'optimizely' or tag =='episerver' or tag == 'optimizely cms' or tag == 'episerver commerce' %}
				  <item>
					  <title>{{ post.title | xml_escape }}</title>
					  <description>
              {% include no-linenos.html content=post.content %}
              {{ content  | strip_html | truncate: 400 }}
            </description>
					  <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
					  <link>{{ post.url | prepend: site.url }}</link>
					  <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
            <author>{{ post.author | default: site.social.name }}</author>
				  </item>
				{% endif %}
			{% endfor %}
		 {% endunless %}
    {% endfor %}
  </channel>
</rss>

{% endcapture %}
{{ source | replace: '&', '&amp;' }}
